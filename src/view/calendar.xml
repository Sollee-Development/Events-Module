<div class="c-calendar">
    <div class="o-layout c-calendar__title">
        <div class="o-layout__item u-1/2@tablet">
            <h2 class="title">November 2015</h2>
            <a class='button' data-user="all" href='events/create'>Create Event <i class="fa fa-calendar-plus-o" aria-hidden="true"></i></a>
        </div><!-- style="padding-right: 30px; float: left; margin: 0.5ex 0;" -->
        <form class="c-calendar__controls o-layout__item u-1/2@tablet" method="get">
            <select name="month">
              <option value="1">January</option>
              <option value="2">February</option>
              <option value="3">March</option>
              <option value="4">April</option>
              <option value="5">May</option>
              <option value="6">June</option>
              <option value="7">July</option>
              <option value="8">August</option>
              <option value="9">September</option>
              <option value="10">October</option>
              <option value="11">November</option>
              <option value="12">December</option>
            </select>
            <select name="year">
              <option value="2015">2015</option>
            </select>
            <input name="submit" type="submit" value="Go" />
            <br />
            <a href="events/" class="previous">&lt;&lt; Previous Month</a> | <a href="events/" class="next">Next Month &gt;&gt;</a>
        </form>
    </div>
    <div class="row c-calendar__container">
        <table class="c-calendar__table u-full-width">
          <thead >
            <tr class="c-calendar__row-head">
              <th class="c-calendar__day-head">Sunday</th>
              <th class="c-calendar__day-head">Monday</th>
              <th class="c-calendar__day-head">Tuesday</th>
              <th class="c-calendar__day-head">Wednesday</th>
              <th class="c-calendar__day-head">Thursday</th>
              <th class="c-calendar__day-head">Friday</th>
              <th class="c-calendar__day-head">Saturday</th>
            </tr>
          </thead>
          <tbody>
            <tr class="c-calendar__row">
              <td class="c-calendar__day">
                <div class="c-calendar__day-number">1</div>
                <div class="c-calendar__event">
                  <a href="events/5">Event 5</a><!-- &#160; -->
                </div>
              </td>
            </tr>
          </tbody>
        </table>
    </div>
</div>
