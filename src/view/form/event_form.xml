<script>$(onReady.forms.event)</script>
<form method="POST" action="events/">
    <div class="row">
        <h2 id="form-title"> Event</h2>
    </div>
    <input type="hidden" name="event_id" />
    <div class="row">
        <div class="four columns">
            <label for="name">Name:</label>
            <input name="name" required="required" type="text" class="u-full-width" />
        </div>
        <div class="four columns">
            <label for="address">Address:</label>
            <textarea name="address" class="u-full-width"></textarea>
        </div>
        <div class="four columns">

        </div>
    </div>
    <div class="row">
        <div class="three columns">
            <label for="start_date">Start Date</label>
            <input type="text" name="start_date" class="u-full-width" required="required"/>
        </div>
        <div class="three columns">
            <label for="start_time">Start Time</label>
            <input type="text" name="start_time" class="u-full-width timepicker" required="required"/>
        </div>
        <div class="three columns">
            <label for="end_date">End Date</label>
            <input type="text" name="end_date" class="u-full-width" />
        </div>
        <div class="three columns">
            <label for="end_time">End Time</label>
            <input type="text" name="end_time" class="u-full-width timepicker" required="required" />
        </div>
    </div>
    <div class="row">
        <div class="two columns">
            <label>
                <input type="checkbox" name="recurring" value="true" />
                <span class="label-body">Reoccurring</span>
            </label>
        </div>
        <div class="four columns recurringSetting">
            <label for="repeat[freq]">Freq</label>
            <select name="repeat[freq]" class="u-full-width" >
                <option value="weekly">Weekly</option>
            </select>
        </div>
        <div class="four columns recurringSetting">
            <label for="repeat[interval_num]">Interval</label>
            <input type="text" name="repeat[interval_num]" class="u-full-width" />
        </div>
    </div>
    <div class="row">
        <button type="submit" class="button-primary">Save</button>
    </div>
</form>
